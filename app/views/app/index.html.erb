<h1>Chat app</h1>

<header id="title">
  <h1>Speakeasy</h1>    
</header>

<div id="app">
  <div id="wrapper">
    <div id="sidebar">
      <h3>Rooms</h3>
      <ul id="rooms">
      </ul>
      <h3>Create Room</h3>
      <div class="createRoom">
        <form>
          <input type="text" placeholder="Room name">
          <button>New Room</button>
        </form>
      </div>
    </div>
    
    <div class="vdivide"></div>

    <div id="content">
      <div id="messages">
        <h3>Messages</h3>
        <ul class="items">
        </ul>
        
        <div class="new">
          <textarea></textarea>
          <button>Send</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  jQuery(function(){
    new App({el: $('#app')});
  })
</script>