<h1>Speakeasy</h1>

<% for message in @messages: %>
  <div class="item" data-id="<%= message.id %>">
    <a data-type="show"><%= message.body %> | <%= message.room_id %></a>
  </div>
<% end %>
----------
<form>
  
  <label>
    <span>New Message</span>
    <input 
      type="text" name="body" 
      value="<%= @body %>" required
 autofocus>
    <input
      type="number" name="room_id"
      value="<%= @room_id %>" required>
  </label>
  
  <button>Create</button>

</form>
